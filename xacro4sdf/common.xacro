<?xml version="1.0"?>
<sdf version="1.7">
    <!--macro defination:inertia_cylinder-->
    <xacro_define_macro name="inertia_cylinder" params="m r l">
        <mass>${m}</mass>
        <inertia>
            <ixx>${m*(3*r*r+l*l)/12}</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>${m*(3*r*r+l*l)/12}</iyy>
            <iyz>0</iyz>
            <izz>${m*r*r/2}</izz>
        </inertia>
    </xacro_define_macro>
    <!--macro defination:inertia_box-->
    <xacro_define_macro name="inertia_box" params="m x y z">
        <mass>${m}</mass>
        <inertia>
            <ixx>${m*(y*y+z*z)/12}</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>${m*(x*x+z*z)/12}</iyy>
            <iyz>0</iyz>
            <izz>${m*(x*x+y*y)/12}</izz>
        </inertia>
    </xacro_define_macro>
    <!--macro defination:geometry cylinder-->
    <xacro_define_macro name="geometry_cylinder" params="r l">
        <geometry>
            <cylinder>
                <radius>${r}</radius>
                <length>${l}</length>
            </cylinder>
        </geometry>
    </xacro_define_macro>
    <!--macro defination:geometry box-->
    <xacro_define_macro name="geometry_box" params="x y z">
        <geometry>
            <box>
                <size>${x} ${y} ${z}</size>
            </box>
        </geometry>
    </xacro_define_macro>
    <!--macro defination:geometry mesh-->
    <xacro_define_macro name="geometry_mesh" params="filename">
        <geometry>
            <mesh>
                <uri>${filename}</uri>
            </mesh>
        </geometry>
    </xacro_define_macro>
    <!--macro defination:visual_collision_with_mesh-->
    <xacro_define_macro name="visual_collision_with_mesh" params="prefix filename">
        <visual name="${prefix}_visual">
            <geometry>
                <mesh>
                    <uri>${filename}</uri>
                </mesh>
            </geometry>
        </visual>
        <collision name="${prefix}_collision">
            <geometry>
                <mesh>
                    <uri>${filename}</uri>
                </mesh>
            </geometry>
        </collision>
    </xacro_define_macro>
</sdf>